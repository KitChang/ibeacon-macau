      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            App's Advertisement
            <small>new</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="/">home</a></li>
            <li><a href="/advertisement">advertisement</a></li>
            <li class="active"><a href="#">new</a></li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          
          <div class="row">
                <!-- left column -->
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="box box-primary">
                <form role="form" action="/app-advertisement?app=<%=req.param('app')%>" method="post">
                  <div class="box-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Title</label>
                      <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Image Url</label>
                      <input type="text" name="image_url" class="form-control" id="exampleInputPassword1" placeholder="">
                    </div>
                          
                    <div class="form-group">
                      <label for="exampleInputPassword1">Text</label>
                      <input type="text" name="text" class="form-control" id="exampleInputPassword1" placeholder="">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Frequency</label>
                      <input type="text" name="frequency" class="form-control" id="exampleInputPassword1" placeholder="">
                    </div>
                    <div class="form-group">
                    <label>Valid Date</label>
                    <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                      </div>
                      <input type="text" name="valid_date" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                    </div><!-- /.input group -->
                    </div><!-- /.form group -->
                    
                    <div class="form-group">
                      <label for="exampleInputPassword1">Pick Location</label>
                      <input type="text" name="pick_location" class="form-control" id="exampleInputPassword1" placeholder="">
                    </div>
                   <!-- <div class="form-group">
                      <label for="exampleInputPassword1">Pick Location</label>-->
                    <button id="deploy" type="button" value="fdsfs" >Deploy to Device</button>
                    <button id="deploy-group" type="button" value="fdsfs" >Deploy to Device Group</button>
                    <!--</div>-->
                    <div id="deploy-modal" class="modal modal-primary ">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          
                          <div class="modal-body">
                            <table id="advertisement-table" class="table table-bordered">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>Name</th>
                                  <th>Type</th>
                                  <th>Location</th>
                                  
                                </tr>
                              </thead>
                              
                              <tbody>
                                <%
                                  var device;
                                  while (devices.length) {
                                    //code
                                    device = devices.pop();
                                %>
                                <tr>
                                  <td><input type="checkbox" name="device-id" value="<%=device.id%>"></td>
                                  <td><%=device.name%></td>
                                  <td><%=device.type%></td>
                                  <td><%=device.location%></td>
                                  
                                </tr>
                                
                                <%
                                  }
                                %>
                              </tbody>
                            </table>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-outline pull-left" data-dismiss="modal" id="deploy-close">Close</button>
                          </div>
                        </div><!-- /.modal-content -->
                      </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->   
                    
                    
                    <div id="deploy-group-modal" class="modal modal-primary ">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          
                          <div class="modal-body">
                            <table id="advertisement-table2" class="table table-bordered">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>location</th>                              
                                </tr>
                              </thead>
                              
                              <tbody>
                                <%
                                  var location;
                                  while (locations.length) {
                                    //code
                                    location = locations.pop();
                                %>
                                <tr>
                                  <td><input type="checkbox" name="device-location" value="<%=location%>"></td>
                                  <td><%=location%></td>
                                </tr>
                                
                                <%
                                  }
                                %>
                               
                              </tbody>
                            </table>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-outline pull-left" data-dismiss="modal" id="deploy-group-close">Close</button>
                          </div>
                        </div><!-- /.modal-content -->
                      </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->   
                            
                    
                    
                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div><!-- /.box -->

            </div>
          </div><!-- /.row -->
         
        </section><!-- /.content -->
